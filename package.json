{
  "name": "pixorapayments",
  "version": "1.0.0",
  "description": "Photobooth Payment Launcher with Cashfree UPI Integration",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "dist": "electron-builder",
    "dev": "concurrently \"node server.js\" \"electron .\"",
    "bridge:client": "node bridge/windows-client.js"
  },
  "keywords": [
    "photobooth",
    "cashfree",
    "electron",
    "photorooms"
  ],
  "author": "Pixora Photorooms",
  "license": "MIT",
  "build": {
    "appId": "com.pixora.photorooms",
    "productName": "PixoraPayments",
    "files": [
      "main.js",
      "preload.js",
      "server.js",
      "config.json",
      "assets/**",
      "src/**",
      "package.json"
    ],
    "extraResources": [
      "assets/**"
    ],
    "directories": {
      "buildResources": "assets/build"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "axios": "^1.13.2",
    "cashfree-pg": "^5.1.0",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12"
  }
}
